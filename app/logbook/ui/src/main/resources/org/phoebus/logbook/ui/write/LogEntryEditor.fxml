<VBox fx:id="root" prefHeight="1000" prefWidth="800" HBox.hgrow="ALWAYS" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.phoebus.logbook.ui.write.LogEntryEditorController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>


    <VBox fx:id="fields" alignment="CENTER" VBox.vgrow="ALWAYS">

        <fx:include source="FieldsView.fxml" VBox.vgrow="ALWAYS" />

        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
      </VBox>

    <VBox fx:id="attachments" alignment="CENTER">
        <fx:include source="AttachmentsView.fxml"/>
    </VBox>

    <HBox alignment="BOTTOM_CENTER" fillHeight="false">
      <children>
         <Pane HBox.hgrow="ALWAYS" />
         <Button fx:id="cancel" alignment="CENTER_RIGHT" onAction="#cancel" mnemonicParsing="false" text="Cancel">
            <HBox.margin>
               <Insets left="5.0" right="5.0" />
            </HBox.margin></Button>
         <Button fx:id="submit" alignment="CENTER_RIGHT" onAction="#submit" mnemonicParsing="false" text="Submit">
            <HBox.margin>
               <Insets left="5.0" />
            </HBox.margin></Button>
      </children>
      <VBox.margin>
         <Insets />
      </VBox.margin>
      <padding>
         <Insets top="10.0" />
      </padding>
    </HBox>

</VBox>
