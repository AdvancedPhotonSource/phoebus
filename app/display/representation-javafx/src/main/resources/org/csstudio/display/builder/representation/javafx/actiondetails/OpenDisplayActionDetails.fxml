<GridPane hgap="10.0" prefHeight="400.0" prefWidth="600.0" vgap="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.csstudio.display.builder.representation.javafx.actiondetails.OpenDisplayActionDetailsController">
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <Label fx:id="descriptionLabel" text="Description:" />
      <TextField fx:id="description" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.hgrow="ALWAYS" />
      <Label fx:id="displayPathLabel" text="Display Path:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
      <TextField fx:id="displayPath" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" />
      <Button fx:id="selectDisplay" text="..." GridPane.columnIndex="2" GridPane.rowIndex="1" />

      <HBox GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2">
         <children>
            <RadioButton fx:id="replaceRadioButton" selected="true" text="Replace">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin></RadioButton>
            <RadioButton fx:id="newTabRadioButton" text="New Tab">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin></RadioButton>
            <RadioButton fx:id="newWindowRadioButton" text="New Window" />
         </children>
         <GridPane.margin>
            <Insets bottom="5.0" top="5.0" />
         </GridPane.margin>
      </HBox>
      <Label text="Pane:" fx:id="paneLabel" GridPane.rowIndex="3" />
      <TextField fx:id="pane" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.columnSpan="2" GridPane.hgrow="ALWAYS" />
      <VBox fx:id="macroTablePlaceholder" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="4"  GridPane.hgrow="ALWAYS"  GridPane.vgrow="ALWAYS"/>
   </children>
</GridPane>
