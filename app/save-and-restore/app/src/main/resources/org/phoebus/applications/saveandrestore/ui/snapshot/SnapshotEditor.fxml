<?xml version="1.0" encoding="UTF-8"?>

<!--
This is the contents of the top portion of a snapshotData tab. Since tabs are added and removed dynamically in the
save-and-restore UI, this fxml does not make use of TabPane and Tab elements.
-->

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="borderPane" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.phoebus.applications.saveandrestore.ui.snapshot.SnapshotController">
<top>
<VBox fx:id="vBox" maxHeight="1.7976931348623157E308" prefWidth="1188.0">

    <ToolBar prefHeight="40.0">
        <items>
            <ToggleButton fx:id="showLiveReadbackButton" mnemonicParsing="false" />
            <ToggleButton fx:id="showStoredReadbackButton" mnemonicParsing="false" />
            <ToggleButton fx:id="showTreeTableButton" mnemonicParsing="false" />
            <Pane HBox.hgrow="ALWAYS" />
         <ToggleButton fx:id="showHideDeltaPercentageButton" mnemonicParsing="false" />
            <ToggleButton fx:id="hideShowEqualItemsButton" mnemonicParsing="false" />
        </items>
    </ToolBar>
    <GridPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
      <columnConstraints>
        <ColumnConstraints hgrow="NEVER" maxWidth="151.0" minWidth="10.0" prefWidth="130.0" />
        <ColumnConstraints hgrow="ALWAYS" maxWidth="311.0" minWidth="10.0" prefWidth="265.0" />
          <ColumnConstraints hgrow="NEVER" />
          <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" minWidth="159.0" prefWidth="288.0" />
          <ColumnConstraints maxWidth="103.0" minWidth="32.0" prefWidth="80.0" />
          <ColumnConstraints />
          <ColumnConstraints />
          <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints />
      </rowConstraints>
       <children>

          <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" style="-fx-font-weight: 900;" text="%createdBy" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.hgrow="NEVER" GridPane.rowIndex="2" GridPane.valignment="CENTER">
             <GridPane.margin>
                <Insets right="5.0" />
             </GridPane.margin>
         </Label>
          <Label fx:id="createdBy" text="Created By" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" GridPane.valignment="CENTER">
               <GridPane.margin>
                   <Insets right="5.0" />
               </GridPane.margin>
         </Label>
          <Label text="%createdDate" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.hgrow="NEVER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
             <GridPane.margin>
                <Insets right="5.0" />
             </GridPane.margin>
         </Label>
          <Label fx:id="createdDate" text="Created Date" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.valignment="CENTER">
             <GridPane.margin>
                <Insets right="5.0" />
             </GridPane.margin>
         </Label>
          <Label fx:id="snapshotNameLabel" text="%snapshotName" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="0" GridPane.valignment="CENTER">
               <GridPane.margin>
                   <Insets right="5.0" />
               </GridPane.margin>
          </Label>
          <TextField fx:id="snapshotName" maxWidth="1.7976931348623157E308" promptText="%snapshotNameFieldHint" GridPane.columnIndex="1" GridPane.rowIndex="0">
               <GridPane.margin>
                   <Insets right="5.0" />
               </GridPane.margin>
          </TextField>
          <Label fx:id="snapshotCommentLabel" alignment="CENTER_RIGHT" contentDisplay="RIGHT" text="%comment" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.hgrow="NEVER" GridPane.valignment="CENTER">
               <GridPane.margin>
                   <Insets left="20.0" right="5.0" top="5.0" />
               </GridPane.margin>
         </Label>
          <TextArea fx:id="snapshotComment" maxWidth="1.7976931348623157E308" promptText="Enter a comment (mandatory)" GridPane.columnIndex="3" GridPane.hgrow="ALWAYS" GridPane.rowSpan="3">
               <GridPane.margin>
                   <Insets bottom="5.0" right="5.0" top="5.0" />
               </GridPane.margin>
         </TextArea>
          <Button fx:id="restoreButton" maxHeight="1.7976931348623157E308" onAction="#restore" prefHeight="82.0" prefWidth="78.0" text="%restore" GridPane.columnIndex="4" GridPane.rowSpan="3">
             <GridPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
             </GridPane.margin>
         </Button>
          <Button fx:id="takeSnapshotButton"  maxHeight="1.7976931348623157E308" onAction="#takeSnapshot" GridPane.columnIndex="6" GridPane.rowIndex="0" GridPane.rowSpan="3">
             <graphic>
                <VBox alignment="CENTER" maxHeight="Infinity">
                   <children>
                      <Label alignment="CENTER" contentDisplay="CENTER" text="%take" />
                      <Label text="%snapshot">
                         <VBox.margin>
                            <Insets top="5.0" />
                         </VBox.margin>
                     </Label>
                   </children>
                </VBox>
             </graphic>
             <GridPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
             </GridPane.margin>
         </Button>
          <Button fx:id="saveSnapshotButton" maxHeight="1.7976931348623157E308" onAction="#saveSnapshot" GridPane.columnIndex="7" GridPane.rowIndex="0" GridPane.rowSpan="3">
             <graphic>
                <VBox alignment="CENTER">
                   <children>
                      <Label text="%save" />
                      <Label text="%snapshot" />
                   </children>
                </VBox>
             </graphic>
             <GridPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
             </GridPane.margin>
          </Button>

       </children>
    </GridPane>
   <ToolBar maxWidth="1.7976931348623157E308" nodeOrientation="LEFT_TO_RIGHT" prefHeight="40.0" prefWidth="1188.0">
      <items>
         <CheckBox fx:id="preserveSelectionCheckBox" mnemonicParsing="false" text="%preserveSelection" />
         <Label text="%filter" />
         <TextField fx:id="filterTextField" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefHeight="26.0" HBox.hgrow="ALWAYS" />
         <Label fx:id="thresholdLabel" text="%threashold" />
         <Spinner fx:id="thresholdSpinner" editable="true" maxWidth="80.0" minWidth="80.0" prefWidth="80.0" />
         <Label fx:id="multiplierLabel" text="%restoreWithScale" />
         <Spinner fx:id="multiplierSpinner" editable="true" maxWidth="80.0" minWidth="80.0" prefWidth="80.0" />
      </items>
   </ToolBar>
</VBox>
</top>
</BorderPane>
