<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.phoebus.applications.saveandrestore.ui.configuration.ConfigurationController">
    <center>
        <GridPane id="parent" fx:id="parent" hgap="5.0" vgap="5.0" BorderPane.alignment="TOP_LEFT">
            <children>
                <Label text="%saveSetName" GridPane.halignment="RIGHT" GridPane.valignment="CENTER">
               <GridPane.margin>
                  <Insets left="5.0" top="3.0" />
               </GridPane.margin></Label>
                <TextField fx:id="saveSetNameField" prefWidth="300.0" promptText="%promptNewSaveSetContent" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.valignment="TOP">
               <GridPane.margin>
                  <Insets top="5.0" />
               </GridPane.margin></TextField>
                <Label fx:id="commentLabel" text="%description" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.valignment="CENTER">
                    <GridPane.margin>
                        <Insets left="5.0" top="3.0" />
                    </GridPane.margin>
                </Label>
                <TextArea fx:id="commentTextArea" maxWidth="1.7976931348623157E308" prefRowCount="3" promptText="%descriptionHint" GridPane.columnIndex="3" GridPane.hgrow="ALWAYS" GridPane.rowSpan="3" GridPane.vgrow="ALWAYS">
                    <GridPane.margin>
                        <Insets right="5.0" top="5.0" />
                    </GridPane.margin>
                </TextArea>
            <Label text="%saveSetDate" GridPane.halignment="RIGHT" GridPane.rowIndex="1" GridPane.valignment="CENTER">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <GridPane.margin>
                  <Insets left="5.0" />
               </GridPane.margin></Label>
            <TextField fx:id="saveSetDateField" editable="false" opacity="0.5" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Button fx:id="saveButton" maxHeight="1.7976931348623157E308" mnemonicParsing="false" onAction="#saveConfiguration" text="%save" GridPane.columnIndex="4" GridPane.rowSpan="3">
                    <GridPane.margin>
                        <Insets right="5.0" top="5.0" />
                    </GridPane.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
                </Button>
            <Label text="%createdBy" GridPane.halignment="RIGHT" GridPane.rowIndex="2" GridPane.valignment="CENTER">
               <GridPane.margin>
                  <Insets left="5.0" />
               </GridPane.margin>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding></Label>
            <TextField fx:id="createdByField" editable="false" opacity="0.5" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <TableView fx:id="pvTable" GridPane.columnSpan="5" GridPane.hgrow="ALWAYS" GridPane.rowIndex="3" GridPane.vgrow="ALWAYS">
                    <columns>
                        <TableColumn prefWidth="-1.0" text="%pvList">
                            <columns>
                                <TableColumn fx:id="pvNameColumn" editable="true" prefWidth="${parent.width * 0.45}" text="%pvName">
                                    <!--cellValueFactory>
                                        <PropertyValueFactory property="pvName" />
                                    </cellValueFactory-->
                                </TableColumn>
                                <TableColumn fx:id="readbackPvNameColumn" prefWidth="${parent.width * 0.45}" text="%pvNameReadback">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="readbackPvName" />
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn fx:id="readOnlyColumn" prefWidth="${parent.width * 0.1}" text="%pvReadOnly">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="readOnly" />
                                    </cellValueFactory>
                                </TableColumn>
                            </columns>
                        </TableColumn>

                    </columns>
                </TableView>
            </children>
            <columnConstraints>
                <ColumnConstraints />
                <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
        </GridPane>
    </center>
    <bottom>
        <GridPane alignment="CENTER_LEFT" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="LEFT" GridPane.rowIndex="4">
            <children>
                <Label alignment="CENTER" text="%pvName" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="0">
                    <GridPane.margin>
                        <Insets left="5.0" right="5.0" />
                    </GridPane.margin>
                </Label>
                <TextField fx:id="pvNameField" GridPane.columnIndex="1" GridPane.columnSpan="1" GridPane.rowIndex="0" HBox.hgrow="ALWAYS">
                    <tooltip>
                        <Tooltip text="%pvNameToolTip" />
                    </tooltip>
                </TextField>

                <CheckBox fx:id="readOnlyCheckBox" mnemonicParsing="false" prefHeight="13.0" prefWidth="19.0" GridPane.columnIndex="3" GridPane.rowIndex="0" HBox.hgrow="ALWAYS" />

                <Button fx:id="addPvButton" disable="true" maxHeight="1.7976931348623157E308" mnemonicParsing="false" onAction="#addPv" text="%add" GridPane.columnIndex="4" GridPane.rowSpan="2">
                    <GridPane.margin>
                        <Insets bottom="5.0" left="10.0" right="5.0" top="5.0" />
                    </GridPane.margin>
                </Button>
                <Label alignment="CENTER" text="%pvNameReadback" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets left="5.0" right="5.0" />
                    </GridPane.margin>
                </Label>
                <TextField fx:id="readbackPvNameField" GridPane.columnIndex="1" GridPane.columnSpan="1" GridPane.rowIndex="1" HBox.hgrow="ALWAYS">
                    <tooltip>
                        <Tooltip text="%pvNameReadbackTooltip" />
                    </tooltip>
                </TextField>
                <Label alignment="CENTER" text="%pvReadOnly" GridPane.columnIndex="2" GridPane.halignment="RIGHT">
                    <GridPane.margin>
                        <Insets left="5.0" right="5.0" />
                    </GridPane.margin>
                </Label>
            </children>
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" maxWidth="313.0" minWidth="10.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="384.0" minWidth="10.0" prefWidth="239.0" />
                <ColumnConstraints hgrow="NEVER" maxWidth="386.0" minWidth="52.0" prefWidth="92.0" />
                <ColumnConstraints hgrow="NEVER" maxWidth="233.0" minWidth="34.0" prefWidth="35.0" />
                <ColumnConstraints hgrow="NEVER" maxWidth="218.0" minWidth="51.0" prefWidth="127.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
            <GridPane.margin>
                <Insets bottom="5.0" top="5.0" />
            </GridPane.margin>
         <BorderPane.margin>
            <Insets bottom="5.0" />
         </BorderPane.margin>
        </GridPane>
    </bottom>
</BorderPane>
